<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fillViewport="true"
    tools:context=".ui.fragments.AnalyticsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="24dp">

        <!-- Page title -->
        <TextView
            android:id="@+id/tvPageHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="16dp"
            android:text="Analytics"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            android:textColor="@color/textPrimary"
            android:textStyle="bold" />

        <!-- Monthly Budget Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="4dp"
            android:text="Monthly Budget"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/textPrimary"
            android:textStyle="bold" />

        <!-- Budget Progress Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTotalBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTotalStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:text="No monthly budget set"/>

                <ProgressBar
                    android:id="@+id/progressTotalBudget"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="12dp"
                    android:progressDrawable="@drawable/progress_gradient"
                    android:max="100"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Cash Flow Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="4dp"
            android:text="Cash Flow Trends"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/textPrimary"
            android:textStyle="bold" />

        <!-- Cash Flow Chart Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCashFlow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvCashFlowSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Balance change over time"
                    android:textColor="@color/textSecondary"
                    android:textSize="14sp" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chartCashFlow"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Swipe left/right to navigate between weeks"
                    android:textColor="@color/textSecondary"
                    android:textSize="12sp"
                    android:alpha="0.7" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Additional analytics here in the future -->

    </LinearLayout>
</androidx.core.widget.NestedScrollView> 