<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme with gold/metallic styling -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorSurface</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnSecondary">@color/colorSurface</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Override default chip styles -->
        <item name="chipStyle">@style/Widget.App.Chip</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <!-- Card and surface styling -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <!-- Button styling -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <!-- Custom CardView with subtle shadow -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="strokeColor">@color/colorPrimaryLight</item>
        <item name="strokeWidth">0.5dp</item>
    </style>

    <!-- Button with gold styling -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorSurface</item>
        <item name="rippleColor">@color/colorPrimaryLight</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom Chip Style with gold accent -->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/colorBackground</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="chipStrokeColor">@color/colorPrimary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipIconTint">@color/colorPrimary</item>
        <item name="chipCornerRadius">16dp</item>
    </style>

    <!-- Custom Income Chip Style -->
    <style name="Widget.App.Chip.Income">
        <item name="chipBackgroundColor">@color/colorIncomeLight</item>
        <item name="rippleColor">@color/colorIncomeDark</item>
        <item name="chipStrokeColor">@color/colorIncomeDark</item>
        <item name="chipIconTint">@color/colorIncomeDark</item>
    </style>

    <!-- Custom Expense Chip Style -->
    <style name="Widget.App.Chip.Expense">
        <item name="chipBackgroundColor">@color/colorExpenseLight</item>
        <item name="rippleColor">@color/colorExpenseDark</item>
        <item name="chipStrokeColor">@color/expense_category_stroke</item>
        <item name="chipIconTint">@color/colorExpenseDark</item>
    </style>

    <!-- Settings-specific styles with gold accents -->
    <style name="SettingsSectionHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="SettingsSubHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- Tab text with gold-themed appearance -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Dialog animation -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    
    <!-- NumberPicker styling with gold accent -->
    <style name="NumberPickerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
    </style>
</resources>