<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorSurface</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/colorSurface</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Override default chip styles -->
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>

    <!-- Custom Chip Style to override purple defaults -->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/colorBackground</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="chipStrokeColor">@color/colorPrimary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipIconTint">@color/colorPrimary</item>
    </style>

    <!-- Custom Income Chip Style -->
    <style name="Widget.App.Chip.Income">
        <item name="chipBackgroundColor">@color/colorIncomeLight</item>
        <item name="rippleColor">@color/colorIncomeDark</item>
        <item name="chipStrokeColor">@color/colorIncomeDark</item>
        <item name="chipIconTint">@color/colorIncomeDark</item>
    </style>

    <!-- Custom Expense Chip Style -->
    <style name="Widget.App.Chip.Expense">
        <item name="chipBackgroundColor">@color/colorExpenseLight</item>
        <item name="rippleColor">@color/colorExpenseDark</item>
        <item name="chipStrokeColor">@color/expense_category_stroke</item>
        <item name="chipIconTint">@color/colorExpenseDark</item>
    </style>

    <!-- Settings-specific styles -->
    <style name="SettingsSectionHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="SettingsSubHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- Add this to your styles.xml file -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
    </style>


    <!-- res/values/styles.xml -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    
    <!-- NumberPicker styling -->
    <style name="NumberPickerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
    </style>
</resources>